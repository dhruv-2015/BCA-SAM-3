@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
* {
    margin: 0;
    padding: 0;
    font-family: 'Roboto', sans-serif;
}

.container {
    padding: 0 200px;
    clear: both;
}

.navbar {
    list-style-type: none;
    display: flex;
}
.navbar li {
    padding: 15px;
}
.navbar li a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.7);
}

.info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    width: 40%;
    float: left;
    height: 300px;
    padding-top: 10px;
    padding-left: 150px;

}
.myimage {
    height: 300px;
    display: flex;
    align-items: center;
    /* justify-content: center; */
    float: right;
    width: 40%;
}
.myimage image {
    width: 150px;
}
.name p {
    color: rgb(39 47 237);
    font-size: 2rem;
}
.name span{
    font-size: 2rem;
    color: rgb(147 37 174);
}
.about-btn {
    margin-top: 30px;
}
.about-btn .about {
    padding: 10px 15px;
    border-radius: 5px;
    background-color: blue;
    color: rgb(255, 255, 255);
    text-decoration: none;
    margin: 0 10px;
}
.about-btn .about:hover {
    background-color: rgb(0, 0, 214);
}
.about-btn .projects {
    margin: 0 10px;
    padding: 8px 15px;
    border-radius: 5px;
    background-color: rgb(255, 255, 255);
    border: 2px solid black;
    color: rgb(0, 0, 0);
    text-decoration: none;
}
.about-btn .projects:hover {
    background-color: gray;
    color: #fff;
}




.about {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.heading {
    justify-content: center;
    color: rgb(39 47 237);
}